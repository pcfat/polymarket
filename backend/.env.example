# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Polymarket API
GAMMA_API_URL=https://gamma-api.polymarket.com
CLOB_API_URL=https://clob.polymarket.com

# Trading Strategy Configuration
TRADE_AMOUNT=1.1
# BET_AMOUNT=1.1  # Alternative name (also supported)
TRADE_WINDOW_SECONDS=120
BANKROLL=100
MAX_EXPOSURE=50

# Market Scan Interval (seconds)
MARKET_SCAN_INTERVAL=30
TRADE_CHECK_INTERVAL=10

# Database
DB_PATH=./polymarket.db

# Live Trading Configuration
# Private key (supports both variable names)
# WALLET_PRIVATE_KEY=your_private_key_here
# POLYMARKET_PRIVATE_KEY=your_private_key_here  # Alternative name (also supported)

# Polymarket proxy wallet address (the address Polymarket assigns to your account)
# POLYMARKET_FUNDER_ADDRESS=your_polymarket_proxy_wallet_address
# POLYMARKET_WALLET_ADDRESS=your_proxy_wallet_address  # Alternative name (also supported)

# CHAIN_ID=137
# MAX_LIVE_TRADE_AMOUNT=50
# SIGNATURE_TYPE=0

# API Credentials (RECOMMENDED - more reliable than auto-derive)
# If provided, these will be used directly instead of calling createOrDeriveApiKey()
# You can get these from your previous Polymarket trading setup
# POLY_API_KEY=your_api_key
# POLY_API_SECRET=your_api_secret
# POLY_API_PASSPHRASE=your_api_passphrase
